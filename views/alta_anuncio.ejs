<%include ./static/header.ejs %>
<%include ./static/sidebar.ejs%>
<%include ./static/navbar.ejs%>

<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->

  <div class="container-fluid">
    <div class="row">
      <h3>Nuevo anuncio</h3>
    </div>
    <!-- form start -->
    <form action="/guardar_anuncio" method="POST">
      <div class="row">
        <div class="col-lg-4">
          <div class="form-group">
            <label for="Titulo">Empleado</label>
            <input readonly type="text" class="form-control" id="empleado" name="empleado"
              value="<%= data.nombreEmpleado%>" name="empleado">
          </div>
        </div>
        <div class="col-lg-2">
          <div class="form-group">
            <label for="Titulo">Gafete</label>
            <input readonly type="text" class="form-control" id="gafete" name="gafete" value="<%= data.numeroEmpleado%>"
              name="gafete">
          </div>
        </div>
      </div>
      <div class="row">
        <dic class="col-lg-6">
          <div class="form-group">
            <label for="titulo">Titulo del anuncio</label>
            <input type="text" class="form-control" id="titulo" name="titulo">
          </div>
        </dic>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <label for="cuerpo">Cuerpo del anuncio</label>
            <textarea class="form-control" id="cuerpo" rows="3" id="cuerpo" name="cuerpo"></textarea>
          </div>
        </div>
      </div>
      <div class="box-footer">
        <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
    </form>
  </div>
  <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->

<% include ./static/footer.ejs%>